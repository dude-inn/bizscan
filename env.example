# Telegram Bot
BOT_TOKEN=your_telegram_bot_token_here

# Data Source Configuration (OFData only)
DATASOURCE=ofdata

# OFData API
OFDATA_API=https://api.ofdata.ru
OFDATA_KEY=your_ofdata_api_key_here
OFDATA_RATE_LIMIT_QPM=70

# OFData endpoint paths
OFDATA_PATH_SEARCH=/v2/search
OFDATA_PATH_COMPANY=/v2/company
OFDATA_PATH_FINANCES=/v2/finances
OFDATA_PATH_LEGAL_CASES=/v2/legal-cases
OFDATA_PATH_CONTRACTS=/v2/contracts
OFDATA_PATH_ENFORCEMENTS=/v2/enforcements
OFDATA_PATH_INSPECTIONS=/v2/inspections

# Общие настройки
REQUEST_TIMEOUT=10
MAX_RETRIES=2
CACHE_TTL_HOURS=24

# TTL Settings (в часах)
TTL_COUNTERPARTY_H=72
TTL_FINANCE_H=168
TTL_PAIDTAX_H=168
TTL_ARBITRAGE_H=12

# Брендирование
BRAND_NAME=BizScan
BRAND_LINK=https://t.me/bizscan_bot

# Логирование
LOG_LEVEL=INFO
LOG_FORMAT=json

# Web Search Providers removed

# Gamma Generate API (beta) - для PDF отчетов
ENABLE_GAMMA_PDF=false
GAMMA_API_KEY=your_gamma_api_key_here
GAMMA_API_BASE=https://public-api.gamma.app/v0.2
GAMMA_THEME=
GAMMA_NUM_CARDS=

# Payments: Robokassa
ROBOKASSA_MERCHANT_LOGIN=
ROBOKASSA_PASSWORD1=
ROBOKASSA_PASSWORD2=
ROBOKASSA_IS_TEST=true
ROBOKASSA_BASE_URL=https://auth.robokassa.ru/Merchant/Index.aspx
ROBOKASSA_RESULT_URL=https://your.domain/robokassa/result
ROBOKASSA_SUCCESS_URL=https://your.domain/robokassa/success
ROBOKASSA_FAIL_URL=https://your.domain/robokassa/fail

# Business config
REPORT_PRICE=70
ENABLE_PAYMENTS=1

